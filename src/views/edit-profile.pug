extends base.pug

block content
  form(method="POST")
  input(placeholder="Enter Name" name="name" type="text", required, value=loggedInUser.name)
  input(placeholder="Enter Email" name="email" type="email", required, value=loggedInUser.email)
  input(placeholder="Enter Username" name="username" type="text", required, value=loggedInUser.Username)
  input(placeholder="Enter Location" name="location" type="text", required, value=loggedInUser.location)
  input(type="submit" value="Update")